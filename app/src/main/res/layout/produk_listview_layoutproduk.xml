<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/gambarProduk"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/tosik"
            app:srcCompat="@drawable/background" />

        <TextView
            android:id="@+id/teksNamaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/gambarProduk"
            android:layout_marginStart="48dp"
            android:layout_toEndOf="@+id/gambarProduk"
            android:text="Nama Produk"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/teksHargaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gambarProduk"
            android:layout_alignEnd="@+id/teksNamaProduk"
            android:text="Harga"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/teksNamaProduk"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_settings_black" />

    </RelativeLayout>
</LinearLayout>
